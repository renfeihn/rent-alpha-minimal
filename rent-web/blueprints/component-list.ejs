import React from 'react';
import { Link } from 'react-router';
import { FormattedMessage, injectIntl } from 'react-intl';
import { Breadcrumb, Icon, Button } from 'antd';

import * as <%= helpers.pascalCase(name) %>Path from './../paths/<%= helpers.pascalCase(name) %>Path';
import { ListComponent } from './../../../components/ListComponent';

class <%= helpers.pascalCase(name) %>List extends ListComponent {
  render() {
    const columns = [
      this.getColumn(this.props.intl.messages.<%= helpers.camelCase(name) %>FieldName, 'name'),
      this.getActionColumn(<%= helpers.pascalCase(name) %>Path.<%= helpers.constantCase(name) %>_EDIT),
    ];
    return (
      <div>
        <Breadcrumb>
          <Breadcrumb.Item>
            <Link to="/"><Icon type="home" /></Link>
          </Breadcrumb.Item>
          <Breadcrumb.Item><FormattedMessage id="<%= helpers.lowerCase(parent) %>Title" /></Breadcrumb.Item>
          <Breadcrumb.Item><FormattedMessage id="<%= helpers.camelCase(name) %>Title" /></Breadcrumb.Item>
        </Breadcrumb>
        <h1>
          <FormattedMessage id="<%= helpers.camelCase(name) %>Title" />
        </h1>
        <Button type="primary" onClick={() => this.forwardTo(<%= helpers.pascalCase(name) %>Path.<%= helpers.constantCase(name) %>_EDIT)}>
          <FormattedMessage id="buttonAddNewRecord" />
        </Button>
        {this.getTableComponent(columns)}
      </div>
    );
  }
}

export default injectIntl(<%= helpers.pascalCase(name) %>List);
